{
  "name": "ETH Dev Tools",
  "version": "0.0.1",
  "description": "ETH Dev Tools Chrome Extension",
  "manifest_version": 2,
  "icons": {
    "128": "icons/128-disabled.png"
  },
  "permissions": [
    "<all_urls>",
    "*://*/*",
    "activeTab",
    "tabs",
    "cookies",
    "background",
    "contextMenus",
    "unlimitedStorage",
    "storage",
    "notifications",
    "identity",
    "identity.email"
  ],
  "browser_action": {
    "default_title": "title",
    "default_popup": "pages/popup.html"
  },
  "background": {
    "persistent": false,
    "page": "pages/background.html"
  },
  "devtools_page": "pages/devtoolsbg.html",
  "options_page": "pages/options.html",
  "content_scripts": [
    {
      "js": ["js/inject.js"],
      "run_at": "document_end",
      "matches": ["<all_urls>"],
      "all_frames": true
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "devtoolspanel.html",
    "js/content.js"
  ]
}